@model Project

@{
    ViewData["Title"] = "Detay";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-action="Index">Projeler</a></li>
    <li class="breadcrumb-item active">Detay</li>
</ol>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ProjectName" class="control-label">Proje Adı</label>
                <input asp-for="ProjectName" class="form-control" readonly/>
                <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label">Proje Açıklaması (Genel)</label>
                <textarea asp-for="Description" class="form-control" readonly></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

                 <div class="form-group"> 
                    <label asp-for="ProjectDate" class="control-label">Tarih</label>
                    <input asp-for="ProjectDate" type="date" class="form-control" readonly/>
                    <span asp-validation-for="ProjectDate" class="text-danger"></span>
                </div>

        </form>
    </div>
</div>
