@model IEnumerable<Entities.Models.User>

@{
    ViewData["Title"] = "Kullanıcı Listesi";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-action="Index">Yetkililer</a></li>
    <li class="breadcrumb-item active">Yetkili Listesi</li>
</ol>

<p>
    <a class="btn btn-outline-dark" asp-action="Create">Yeni Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Mail Adresi
            </th>

            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>
                    <form asp-action="Delete" method="post" asp-route-id="@item.Id">

                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                            <i class="fa fa-edit"></i>
                        </a>

                        <button type="submit" class="btn btn-sm btn-outline-danger">
                            <i class="fa fa-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>